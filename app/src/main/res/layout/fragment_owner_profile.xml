<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- Profile Initials -->
        <TextView
            android:id="@+id/profileInitials"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="KK"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/profile_circle_bg"
            android:elevation="6dp"
            android:layout_marginTop="24dp" />

        <!-- Full Name -->
        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Krish Kalariya"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="12dp" />

        <!-- Email + Phone -->
        <TextView
            android:id="@+id/profileDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com\n+91 1234567890"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="#333333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Edit Profile Button -->
        <Button
            android:id="@+id/editProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="20dp" />

        <!-- Menu Options Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_card_bg"
            android:layout_marginTop="24dp"
            android:elevation="2dp"
            android:padding="8dp">

            <!-- Account Security -->
            <TextView
                android:id="@+id/optionAccountSecurity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account Security"
                android:textColor="#000000"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Notifications -->
            <TextView
                android:id="@+id/optionNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textColor="#000000"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Privacy -->
            <TextView
                android:id="@+id/optionPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy"
                android:textColor="#000000"
                android:padding="16dp"
                android:background="?attr/selectableItemBackground"/>
        </LinearLayout>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FF5252"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"/>

    </LinearLayout>
</ScrollView>
