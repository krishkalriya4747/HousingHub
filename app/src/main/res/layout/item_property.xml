<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/card_background"
    android:padding="12dp"
    android:layout_margin="12dp"
    android:elevation="4dp">

    <!-- Property Image with Badges and Bookmark -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp">

        <ImageView
            android:id="@+id/propertyImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Property Image"
            android:src="@drawable/gotri" />

        <!-- Top Left Badges -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start|top"
            android:padding="8dp">

            <TextView
                android:id="@+id/badge_verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/badge_verified"
                android:text="Verified"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp" />

            <TextView
                android:id="@+id/badge_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/badge_new"
                android:text="New"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:paddingHorizontal="6dp"
                android:paddingVertical="3dp" />
        </LinearLayout>

        <!-- Top Right Bookmark -->
        <ImageView
            android:id="@+id/bookmarkIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="top|end"
            android:layout_margin="8dp"
            android:src="@drawable/ic_bookmark_border"
            android:contentDescription="Bookmark"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comfort Stay PG"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- Location -->
    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gotri, Vadodara"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp" />

    <!-- Price -->
    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚¹12,000/month"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1E88E5"
        android:layout_marginBottom="4dp" />

    <!-- Owner Information -->
    <TextView
        android:id="@+id/ownerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Owner: Not specified"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Availability Status -->
    <TextView
        android:id="@+id/availabilityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available"
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

</LinearLayout>
